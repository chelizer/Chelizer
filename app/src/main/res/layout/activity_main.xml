<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:id="@+id/lsvAprendices" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="Nombre:"
                android:id="@+id/textView"
                android:layout_weight="0.04" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:id="@+id/editTextNombreInsert"
                android:layout_weight="0.32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="Edad:"
                android:id="@+id/textViewEdadInsert"
                android:layout_weight="0.04" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTextEdadInsert"
                android:layout_weight="0.13" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insertar"
                android:id="@+id/button"
                android:onClick="insertar"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Nombre:"
                android:id="@+id/textView2"
                android:layout_weight="0.05" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:id="@+id/editTextNombreBuscar"
                android:layout_weight="0.34" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15">

            <Button
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:id="@+id/button2"
                android:onClick="buscar"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.29"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nombre:"
                android:id="@+id/textView3"
                android:layout_weight="0.05" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:id="@+id/editTextNombreEliminar"
                android:layout_weight="0.35" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:id="@+id/button3"
            android:onClick="eliminar" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:weightSum="1">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:id="@+id/editTextEdadActualizar"
                android:layout_weight="0.36" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:id="@+id/editTextNombreActualizar"
                android:layout_weight="0.30" />

        </LinearLayout>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Edad"
            android:id="@+id/textView4"
            android:layout_weight="0.44" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:layout_weight="6.68" />

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:id="@+id/button4"
        android:onClick="actualizar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp" />
</RelativeLayout>
